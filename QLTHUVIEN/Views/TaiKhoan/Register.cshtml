@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="h2 text-danger justify-content-center ">
        @errorMessage
    </div>
}
@{
    var redirectMessage = TempData["RedirectMessage"] as string;
}

@if (!string.IsNullOrEmpty(redirectMessage))
{
    <div class="alert alert-warning">
        @redirectMessage
    </div>
}
<
<br style="height: 100px; content: ''; display: block;">

<form class="modal-content animate" asp-action="Register" method="post" style="width: 600px;margin-left: auto;margin-right: auto;">


        <div class="container register">
            <div class="mb-3">
                <label for="username" class="form-label"><b>Username</b></label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter Username" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label"><b>Password</b></label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label"><b>Confirm Password</b></label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password" required>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </div>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
    </form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var form = document.querySelector('form');
        form.addEventListener('submit', function (event) {
            // Lấy giá trị của các trường mật khẩu
            var password1El = document.getElementById('password');
            var password2El = document.getElementById('confirmPassword');

            // Kiểm tra xem các mật khẩu có khớp nhau không
            if (password1El.value !== password2El.value) {
                // Ngăn không cho gửi form
                event.preventDefault();

                // Hiển thị thông báo lỗi
                alert('Passwords không trùng khớp');
            }
        });
    });
</script>