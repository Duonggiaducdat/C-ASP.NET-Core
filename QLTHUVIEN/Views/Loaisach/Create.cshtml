@model QLTHUVIEN.Models.Loaisach

@{
    ViewData["Title"] = "Thêm loại sách";
}

<div class="Customer">
    <h2 class="margintop">@ViewData["Title"]</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Tenloaisach" class="control-label"></label>
            <input asp-for="Tenloaisach" class="form-control" />
            <span asp-validation-for="Tenloaisach" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mota" class="control-label"></label>
            <textarea asp-for="Mota" class="form-control"></textarea>
            <span asp-validation-for="Mota" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Thêm" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>
