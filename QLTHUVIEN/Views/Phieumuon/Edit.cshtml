@model QLTHUVIEN.Models.Phieumuon

@{
    ViewData["Title"] = "Chỉnh Sửa Phiếu Mượn";
}
<div class="Customer">

    <h1>@ViewData["Title"]</h1>

    <h4>Thông tin Phiếu Mượn</h4>
    <hr />

    <form asp-action="Edit" method="post">
        <!-- Sử dụng hidden field để giữ mã phiếu mượn -->
        <input type="hidden" asp-for="MaPhieumuon" />

        <div class="form-group">
            <label asp-for="Masach" class="control-label"></label>
            <select asp-for="Masach" asp-items="ViewBag.sach" class="form-control">
                <option value="">-- Select Mã sách --</option>
            </select>
            <span asp-validation-for="Masach" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ngaymuon" class="control-label"></label>
            <input asp-for="Ngaymuon" class="form-control" type="date" />
            <span asp-validation-for="Ngaymuon" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ngaytra" class="control-label"></label>
            <input asp-for="Ngaytra" class="form-control" type="date" />
            <span asp-validation-for="Ngaytra" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HoTenNguoiMuon" class="control-label"></label>
            <input asp-for="HoTenNguoiMuon" class="form-control" />
            <span asp-validation-for="HoTenNguoiMuon" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CmndNguoiMuon" class="control-label"></label>
            <input asp-for="CmndNguoiMuon" class="form-control" />
            <span asp-validation-for="CmndNguoiMuon" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiaChiNguoiMuon" class="control-label"></label>
            <input asp-for="DiaChiNguoiMuon" class="form-control" />
            <span asp-validation-for="DiaChiNguoiMuon" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SoDienThoaiNguoiMuon" class="control-label"></label>
            <input asp-for="SoDienThoaiNguoiMuon" class="form-control" />
            <span asp-validation-for="SoDienThoaiNguoiMuon" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Trangthai" class="control-label"></label>
            <select asp-for="Trangthai" class="form-control">
                <option value="Đang mượn">Đang mượn</option>
                <option value="Đã trả" >Đã trả</option>
                <option value="Trễ hẹn">Trễ hẹn</option>
            </select>
            <span asp-validation-for="Trangthai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Cập Nhật Phiếu Mượn" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index">Quay lại danh sách</a>
</div>
